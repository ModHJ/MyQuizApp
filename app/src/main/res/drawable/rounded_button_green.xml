<!-- res/drawable/rounded_button_green.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0DA216"/> <!-- darker green when pressed -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#21D030"/> <!-- green -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>
